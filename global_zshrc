function mount {
  if [ "$1" = "sudo" ]; then
    shift
    sudo /usr/bin/mount "$@"
  else
    /usr/bin/mount "$@"
  fi
  pkill -RTMIN+14 i3blocks
}

function umount() {
  if [ "$1" = "sudo" ]; then
    shift
    sudo /usr/bin/umount "$@"
  else
    /usr/bin/umount "$@"
  fi
  pkill -RTMIN+14 i3blocks
}

function axeldownload() {
  axel -v -a -n $1 $2 }

function up() {
  times=$1
  while [ "$times" -gt "0" ]; do
    cd ..
    times=$(($times - 1))
  done
}

